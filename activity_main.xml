<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hijab"
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hijab" />

    <TextView
        android:id="@+id/name_of_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hijab"
        android:paddingLeft="20dp"
        android:text="EXQUISITE HOME OF FASHION"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/what_we_do"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_of_company"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="We take care of Hijab of different sizes,shapes,colors and materilas.  "
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_below="@id/what_we_do"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:src="@drawable/facebook" />

    <TextView
        android:id="@+id/facebookAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/what_we_do"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/facebook"
        android:text="facebook.com/Exquisite Home Of Fashion"

        />

    <ImageView
        android:id="@+id/phonelogo"
        android:layout_width="27dp"
        android:layout_height="50dp"
        android:layout_below="@id/facebook"
        android:paddingLeft="8dp"
        android:src="@drawable/phonelogo" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_below="@+id/phonelogo"
        android:src="@drawable/locationlogo" />

    <ImageView
        android:id="@+id/mail"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_below="@+id/location"
        android:src="@drawable/mail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/facebook"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/phonelogo"
        android:text="+2349039170005" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phonelogo"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/location"
        android:text="Abuja,Nigeria" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/mail"
        android:text="exquisitefashion@gmail.com" />


</RelativeLayout>